@model PillDrop.Domain.Presentation.UserModel

@{
    ViewBag.Title = "Add Patient";
    ViewBag.Heading1 = "Manage Users";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-body ">
                <div class="grid-body no-border">
                    <div class="row">
                        <br />
                        <div id="rootwizard" class="col-md-10">
                            <div class="form-wizard-steps">
                                <ul class="wizard-steps">
                                    <li data-target="#step1"> <a href="#tab0" data-toggle="tab"> <span class="step">1</span> <span class="title"> Personal Details </span> </a> </li>
                                    <li><a href="#tab1" data-toggle="tab"> <span class="step">2</span> <span class="title"> Demographic Details</span> </a> </li>

                                </ul>
                                <div class="clearfix"></div>
                                <br /><br />
                                <p class="note">Please note: All fields marked with * are compulsory and information is required </p>
                                <br />
                                <div class="tab-content transparent">
                                    <div class="checkbox check-success">
                                        <input type="checkbox" id="finalstep" name="finalstep" checked="checked" value="false">
                                    </div>
                                    <div class="tab-pane" id="tab0"></div>
                                    <div class="tab-pane" id="tab1"></div>
                                    <br /><br />
                                    <div class="clearfix"></div>
                                    <ul class="wizard wizard-actions">
                                        <li class="next pull-right"><a class="btn btn-primary" href="javascript:;" id="nextButton">&nbsp;&nbsp;Next&nbsp;&nbsp;</a></li>
                                        <li class="next finish pull-right"><button class="btn btn-primary" id="submitButton" type="submit">&nbsp;&nbsp;Submit&nbsp;&nbsp;</button></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div>
        @Html.ActionLink("Back to List", "Index", "Home")
    </div>
    <script>
        $(document).ready(function() {
            $('#confirmModal').modal({ backdrop: "static", keyboard: false })
        })
        </script>

