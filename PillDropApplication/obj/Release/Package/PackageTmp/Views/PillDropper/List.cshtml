@model PillDrop.Domain.Presentation.UserModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-users"></i> PillDroppers
        <span style="margin-left: 750px">
            <a href="/pilldropper/create" class="btn btn-outline-primary"> Add Pilldropper </a>
        </span>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Contact No</th>
                    <th>Email</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model.PillDroppers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => emp.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => emp.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => emp.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => emp.Email)
                        </td>
                        <td>

                            <a class="btn btn-outline-success" href="/pilldropper/view/@emp.Id"> View</a>
                            <a class="btn btn-outline-primary" href="/pilldropper/Edit/@emp.Id"> Edit</a>
                            <a id="delete" name="@emp.Id" class="btn btn-outline-danger">
                                <i class="fa fa-fw fa-sign-out"></i>Delete
                            </a>
                            @*<a class="btn btn-danger" id="delete" name="@emp.Id"> Remove</a>@*href="/User/Delete/@emp.Id"*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

