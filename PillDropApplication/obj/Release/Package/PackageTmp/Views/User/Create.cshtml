@model PillDrop.Domain.Presentation.UserModel

@{
    ViewBag.Title = "Administrator";
    ViewBag.Heading1 = "Add Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "User", null, FormMethod.Post, new { @id = "pilldropper-form", @class = "form", @Required = "required" }))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="row">
        <div class="col-md-6 ">
            <div class="form-group">
                <label class="form-label"><span class="text-error">*</span> Name</label>
                <div class="input-with-icon right">
                    <i class=""></i>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="form-group">
                <label class="form-label"><span class="text-error">*</span> Surname</label>
                <div class="input-with-icon right">
                    <i class=""></i>
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="form-group">
                <label class="form-label"><span class="text-error">*</span> Mobile Contact Number</label>
                <div class="input-with-icon right">
                    <i class=""></i>
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @required = "required", @digits = true })
                </div>
            </div>
            <div class="form-group">
                <label class="form-label"><span class="text-error">*</span> Email Address</label>
                <div class="input-with-icon right">
                    <i class=""></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", @validemail = "true", @placeholder = "Enter your email" })
                </div>
            </div>
            <div class="form-group">
                <label class="form-label"><span class="text-error">*</span> Organization</label>
                <div class="input-with-icon right">
                    <i class=""></i>
                    @Html.DropDownListFor(m => m.OrganizationId, new SelectList(Model.RoleList, "Value", "Text"), "Select...", new { @class = "select2 form-control", @required = "required" })
                </div>
            </div>
            <div id="form-group">
                <a href="/" id="close" class="btn btn-primary"> Cancel</a>
                <button type="submit" class="btn btn-success"> Submit</button>
            </div>

        </div>
    </div>
}


<script>
    $(document).ready(function () {
        $('#confirmModal').modal({ backdrop: "static", keyboard: false });
    })
</script>

